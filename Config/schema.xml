<?xml version="1.0" encoding="UTF-8"?>
<database defaultIdMethod="native" name="TheliaMain"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="../../../../vendor/thelia/propel/resources/xsd/database.xsd" >

    <table name="prices_slices" namespace="DpdClassic\Model">
        <column name="weight" primaryKey="true" required="true" type="FLOAT" />
        <column name="price" required="true" type="FLOAT" />
        <column name="id_area" primaryKey="true" required="true" type="INTEGER" />
        <column name="info" required="false" type="VARCHAR" />

        <foreign-key foreignTable="area" name="fk_area_prices_slices_id" onDelete="RESTRICT" onUpdate="RESTRICT">
            <reference foreign="id" local="id_area" />
        </foreign-key>
    </table>



    <external-schema filename="local/config/schema.xml" referenceOnly="true" />
</database>
