<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="dpdclassic.editprices" path="/admin/module/DpdClassic/edit-prices" methods="post">
        <default key="_controller">DpdClassic:EditPrices:editPrices</default>
    </route>

    <route id="dpdclassic.export" path="/admin/module/DpdClassic/export" methods="post">
        <default key="_controller">DpdClassic:Export:exportFile</default>
    </route>

    <route id="dpdclassic.updatesender" path="/admin/module/DpdClassic/update-sender" methods="post">
        <default key="_controller">DpdClassic:ExportExaprint:updateSender</default>
    </route>

    <route id="dpdclassic.freeshipping" path="/admin/module/DpdClassic/freeshipping" methods="post">
        <default key="_controller">DpdClassic:FreeShipping:changeFreeShipping</default>
    </route>

    <route id="dpdclassic.import" path="/admin/module/DpdClassic/import" methods="post">
        <default key="_controller">DpdClassic:Import:importFile</default>
    </route>

    <route id="dpdclassic.config" path="/admin/module/DpdClassic/config" methods="post">
        <default key="_controller">DpdClassic:Configuration:configure</default>
    </route>

    <route id="dpdclassic.freeshipping_amount" path="/admin/module/DpdClassic/freeshipping_amount" methods="post">
        <default key="_controller">DpdClassic:FreeShipping:amount</default>
    </route>

    <route id="dpdclassic.save.api.config" path="/admin/module/DpdClassic/api/save-config">
        <default key="_controller">DpdClassic:Configuration:saveApiConfig</default>
    </route>

    <route id="dpdclassic.labels" path="/admin/module/DpdClassic/labels">
        <default key="_controller">DpdClassic:Label:show</default>
    </route>

    <route id="dpdclassic.save.label" path="/admin/module/DpdClassic/saveLabel">
        <default key="_controller">DpdClassic:Label:save</default>
    </route>

    <route id="dpdclassic.download.label" path="/admin/module/DpdClassic/labels-file/{base64EncodedFilename}">
        <default key="_controller">DpdClassic:Label:download</default>
    </route>

    <route id="dpdclassic.show.label" path="/admin/module/DpdClassic/getLabel/{orderRef}">
        <default key="_controller">DpdClassic:Label:getLabel</default>
    </route>

    <route id="dpdclassic.delete.label" path="/admin/module/DpdClassic/deleteLabel">
        <default key="_controller">DpdClassic:Label:deleteLabel</default>
    </route>

    <route id="dpdclassic.generate.label" path="/admin/module/DpdClassic/generateLabel">
        <default key="_controller">DpdClassic:Label:generateLabel</default>
    </route>
</routes>
